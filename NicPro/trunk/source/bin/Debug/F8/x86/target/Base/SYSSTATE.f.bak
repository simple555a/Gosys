fblock SYSSTATE;		//ϵͳ״̬
attribute(autoscan);
uuid{d7cc-1db9-c362-4453};
var
	RUN : bool; out;
	RP : bool; out;
	CYCLES : dword; out;
	TIME : date; out;
	
implementation

void on_start()
{
	RUN = 1;
	RP = 1;
	CYCLES = 0;
	// __asm("int $3");
}

void on_stop()
{
	// __asm("int $3");
	RUN = 0;
	RP = 0;
	CYCLES=0;
}

void main()
{
	CYCLES++;
	if(CYCLES > 10){
		RP = 0;
	}
}
